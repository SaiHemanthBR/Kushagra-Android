<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/navigation_crop">

    <fragment
        android:id="@+id/navigation_crop"
        android:name="com.project.crop_prediction.ui.recents.RecentsFragment"
        android:label="@string/navigation_crop_title"
        tools:layout="@layout/fragment_recents">
        <argument
            android:name="kind"
            android:defaultValue="crop" />
    </fragment>

    <fragment
        android:id="@+id/navigation_disease"
        android:name="com.project.crop_prediction.ui.recents.RecentsFragment"
        android:label="@string/navigation_disease_title"
        tools:layout="@layout/fragment_recents">
        <argument
            android:name="kind"
            android:defaultValue="disease" />
    </fragment>

    <fragment
        android:id="@+id/navigation_forum"
        android:name="com.project.crop_prediction.ui.ForumFragment"
        android:label="Grievance Portal"
        tools:layout="@layout/fragment_forum" />

    <fragment
        android:id="@+id/navigation_prices"
        android:name="com.project.crop_prediction.ui.PricesFragment"
        android:label="Market Prices"
        tools:layout="@layout/fragment_prices" />

</navigation>